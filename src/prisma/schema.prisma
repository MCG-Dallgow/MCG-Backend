// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id        String   @id
  firstname String
  lastname  String
  group     Group    @relation(fields: [groupId], references: [id])
  groupId   String
  courses   Course[]
}

model Teacher {
  id        String    @id
  firstname String
  lastname  String
  gender    Gender
  email     String
  subjects  Subject[]
  group     Group?    @relation(fields: [groupId], references: [id])
  groupId   String?
  courses   Course[]
}

model Group {
  id       String    @id @default(uuid())
  name     String    @unique
  students Student[]
  teachers Teacher[]
}

model Course {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  subject   Subject   @relation(fields: [subjectId], references: [id])
  teachers  Teacher[]
  students  Student[]
  subjectId String
}

model Subject {
  id       String    @id
  name     String    @unique
  courses  Course[]
  teachers Teacher[]
}

enum Gender {
  FEMALE
  MALE
  UNKNOWN
}
